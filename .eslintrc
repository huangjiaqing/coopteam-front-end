{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      },
      "sourceType": "module",
      "ecmaVersion": 7
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
      "no-unused-expressions": [0, {
        "allowShortCircuit": true,
        "allowTernary": true
      }],
      "no-undef": 0,
      "no-console": 0,
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "react/jsx-uses-vars": "error",
      "react/jsx-uses-react": "error"
  }
}